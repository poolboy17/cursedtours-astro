import { getAllArticles } from '../data/articles';

const recentArticles = getAllArticles().slice(0, 6);

const usCities = [
  { name: 'New Orleans', slug: 'new-orleans-ghost-tours', image: '/images/city-hubs/new-orleans.webp', tagline: 'Voodoo, vampires & French Quarter hauntings' },
  { name: 'Savannah', slug: 'savannah-ghost-tours', image: '/images/city-hubs/savannah.webp', tagline: 'Colonial ghosts & moss-draped cemeteries' },
  { name: 'Salem', slug: 'salem-ghost-tours', image: '/images/city-hubs/salem.webp', tagline: 'Witch trial history & maritime hauntings' },
  { name: 'Charleston', slug: 'charleston-ghost-tours', image: '/images/city-hubs/charleston.webp', tagline: 'Civil War spirits & Lowcountry legends' },
  { name: 'Boston', slug: 'boston-ghost-tours', image: '/images/city-hubs/boston.webp', tagline: 'Revolutionary ghosts & colonial graveyards' },
  { name: 'Chicago', slug: 'chicago-ghost-tours', image: '/images/city-hubs/chicago.webp', tagline: 'Gangster ghosts & Great Fire hauntings' },
  { name: 'St. Augustine', slug: 'st-augustine-ghost-tours', image: '/images/city-hubs/st-augustine.webp', tagline: "America's oldest city & 450 years of ghosts" },
  { name: 'New York', slug: 'new-york-ghost-tours', image: '/images/city-hubs/new-york.webp', tagline: 'Greenwich Village spirits & Gilded Age murders' },
  { name: 'San Antonio', slug: 'san-antonio-ghost-tours', image: '/images/city-hubs/san-antonio.webp', tagline: 'Alamo ghosts & Spanish mission hauntings' },
  { name: 'Washington DC', slug: 'washington-dc-ghost-tours', image: '/images/city-hubs/washington-dc.webp', tagline: 'White House ghosts & Capitol Hill hauntings' },
  { name: 'Nashville', slug: 'nashville-ghost-tours', image: '/images/city-hubs/nashville.webp', tagline: 'Ryman phantoms & Printers Alley spirits' },
  { name: 'Austin', slug: 'austin-ghost-tours', image: '/images/city-hubs/austin.webp', tagline: 'Servant Girl Annihilator & Driskill Hotel' },
  { name: 'Denver', slug: 'denver-ghost-tours', image: '/images/city-hubs/denver.webp', tagline: 'Cheesman Park graves & frontier-era ghosts' },
];

const intlCities = [
  { name: 'Edinburgh', slug: 'edinburgh-ghost-tours', image: '/images/city-hubs/edinburgh.webp', tagline: 'Underground vaults & bodysnatchers' },
  { name: 'London', slug: 'london-ghost-tours', image: '/images/city-hubs/london.webp', tagline: 'Jack the Ripper & Tower of London spirits' },
  { name: 'Dublin', slug: 'dublin-ghost-tours', image: '/images/city-hubs/dublin.webp', tagline: 'Viking ghosts & Kilmainham Gaol hauntings' },
  { name: 'Rome', slug: 'rome-ghost-tours', image: '/images/city-hubs/rome.webp', tagline: 'Colosseum spirits & catacomb hauntings' },
  { name: 'Paris', slug: 'paris-ghost-tours', image: '/images/city-hubs/paris.webp', tagline: 'Catacombs, guillotine ghosts & Pere Lachaise' },
];

const faqs = [
  {
    question: 'Are ghost tours actually scary?',
    answer: "Most ghost tours focus on history and storytelling rather than jump scares. They range from family-friendly walking tours to more intense paranormal investigations. The best tours are genuinely educational\u2014you learn real local history through the lens of documented hauntings and tragic events."
  },
  {
    question: 'What should I wear on a ghost tour?',
    answer: "Comfortable walking shoes are essential since most tours cover 1\u20132 miles on foot. Dress for the weather and bring a light jacket\u2014evening tours can get cool. Avoid heels or sandals, especially in cities with cobblestone streets like Savannah or Edinburgh."
  },
  {
    question: 'Are ghost tours suitable for children?',
    answer: "Many ghost tours welcome children and adjust their storytelling accordingly. Walking tours and trolley tours tend to be the most family-friendly. Paranormal investigations and pub crawls are typically adults-only. Check the tour description for age recommendations before booking."
  },
  {
    question: 'What is the most haunted city in America?',
    answer: "Savannah, New Orleans, and Salem consistently rank as America\u2019s most haunted cities. Savannah\u2019s entire historic district sits on colonial-era burial grounds. New Orleans has 300 years of plague, slavery, and voodoo tradition. Salem\u2019s legacy extends beyond the 1692 witch trials into centuries of maritime disaster."
  },
  {
    question: 'How long do most ghost tours last?',
    answer: "Walking ghost tours typically run 90 minutes to 2 hours. Pub crawl tours last 2\u20133 hours with stops at haunted bars. Cemetery tours are usually 60\u201390 minutes. Paranormal investigations can run 3\u20134 hours, often starting late at night."
  },
  {
    question: 'Do ghost tours run in the rain?',
    answer: "Most walking tours operate rain or shine\u2014ghosts don\u2019t take weather days. Some operators offer ponchos or umbrellas. Trolley tours and indoor investigations aren\u2019t affected by weather at all. If conditions are severe, reputable companies will reschedule or refund."
  },
  {
    question: 'What is the difference between a ghost tour and a paranormal investigation?',
    answer: "Ghost tours are guided walks through haunted locations with historical storytelling. Paranormal investigations give you hands-on access to equipment like EMF readers, spirit boxes, and thermal cameras in documented haunted buildings. Tours are passive experiences; investigations are active participation."
  },
  {
    question: 'How do I choose the best ghost tour?',
    answer: "Look for tours with high review counts (500+), guides with local historical knowledge, and small group sizes (under 20 people). The best tours cite specific dates, names, and documented events\u2014not generic ghost stories. Avoid tours that rely on costumes or theatrical scares over real history."
  },
];

const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(f => ({
    "@type": "Question",
    "name": f.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": f.answer,
    }
  }))
};

const websiteLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Cursed Tours",
  "url": "https://cursedtours.com",
};

const organizationLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Cursed Tours",
  "url": "https://cursedtours.com",
  "logo": "https://cursedtours.com/images/logo.png",
};
---

<Layout
  title="Ghost Tours & Haunted Experiences Worldwide | Cursed Tours"
  description="Find ghost tours in 18+ haunted cities worldwide. Walking tours, cemetery visits, pub crawls, and paranormal investigations grounded in real history."
  canonical="https://cursedtours.com/"
  ogImage="https://cursedtours.com/images/homepage-hero.webp"
  ogImageWidth={1792}
  ogImageHeight={1024}
>
  <script type="application/ld+json" set:html={JSON.stringify(websiteLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqLd)} />

  <!-- Hero Section -->
  <section class="relative py-6 lg:py-10">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="flex flex-col gap-6 md:flex-row md:items-center md:gap-8 lg:gap-12">
        <div class="w-full md:w-2/5 lg:w-[45%]">
          <div class="space-y-4 rounded-3xl p-5 sm:p-8 shadow-lg backdrop-blur-lg" style="background: rgba(26, 16, 37, 0.6);">
            <div class="flex flex-wrap gap-2">
              <span class="inline-flex rounded-full px-3 py-1.5 text-xs font-semibold text-white shadow-sm sm:text-sm" style="background-color: #7c3aed;">
                Ghost Tours & Haunted Experiences
              </span>
            </div>
            <h1 class="text-2xl font-bold leading-tight sm:text-3xl lg:text-4xl xl:text-5xl text-white" style="font-family: 'Cinzel', serif;">
              Ghost Tours Worldwide
            </h1>
            <p class="text-base leading-relaxed sm:text-lg lg:text-xl" style="color: #c8bdd8;">
              Haunted history, real stories, and unforgettable tours in the world's most haunted cities.
            </p>
            <a
              href="#cities"
              class="inline-flex items-center gap-2 rounded-full px-6 py-3 text-base font-semibold text-white transition-colors sm:text-lg"
              style="background-color: #7c3aed;"
            >
              Browse Cities
            </a>
          </div>
        </div>
        <div class="w-full md:w-3/5 lg:w-[55%]">
          <div class="relative aspect-[16/12] sm:aspect-[16/9] md:aspect-[16/14] lg:aspect-[16/10] overflow-hidden rounded-3xl">
            <img
              src="/images/homepage-hero.webp"
              alt="Ghostly figure in a haunted house during a ghost tour"
              class="absolute inset-0 w-full h-full object-cover"
              loading="eager"
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="py-8 border-b" style="border-color: #3d2a4d;">
    <div class="container px-4 mx-auto max-w-7xl">
      <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">History-First Tours</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Every tour grounded in documented events, not fictional scares.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Instant Booking</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Secure checkout with immediate confirmation.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Small Group Sizes</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Intimate experiences with expert local guides.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Transparent Pricing</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">No hidden fees. See what you pay before you book.</p>
          </div>
        </li>
      </ul>
    </div>
  </section>

  <!-- Editorial Section 1: What Makes a Ghost Tour Worth Taking -->
  <section class="py-12 md:py-16">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="flex flex-col gap-8 md:flex-row md:items-center md:gap-12">
        <div class="w-full md:w-1/2">
          <div class="aspect-[4/3] overflow-hidden rounded-2xl">
            <img src="/images/city-hubs/new-orleans.webp" alt="Haunted streets of New Orleans French Quarter at night" class="w-full h-full object-cover" loading="lazy">
          </div>
        </div>
        <div class="w-full md:w-1/2">
          <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white mb-4" style="font-family: 'Cinzel', serif;">
            What Makes a Ghost Tour Worth Taking
          </h2>
          <div class="text-base leading-relaxed space-y-4" style="color: #c8bdd8;">
            <p>
              A ghost tour is not a haunted house. The best ghost tours are walking histories of real places where documented tragedies occurred&#8212;guided by someone who knows the local archives, not just the legends. You walk the same streets where yellow fever killed thousands in <a href="/new-orleans-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">New Orleans</a>, stand outside the jail cells where accused witches awaited trial in <a href="/salem-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Salem</a>, or descend into the underground vaults where Edinburgh's poorest were sealed alive beneath the city.
            </p>
            <p>
              They come in many forms: <a href="/articles/walking-ghost-tour-guide/" class="text-purple-400 hover:text-purple-300 transition-colors">walking tours</a> through historic districts, <a href="/articles/cemetery-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">cemetery tours</a> with centuries of stories beneath the headstones, <a href="/articles/ghost-tour-pub-crawls/" class="text-purple-400 hover:text-purple-300 transition-colors">pub crawls</a> through haunted bars, and <a href="/articles/paranormal-investigation-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">paranormal investigations</a> with EMF readers and spirit boxes.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Editorial Section 2: The World's Most Haunted Cities -->
  <section class="py-12 md:py-16 border-t" style="border-color: #3d2a4d;">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="flex flex-col gap-8 md:flex-row-reverse md:items-center md:gap-12">
        <div class="w-full md:w-1/2">
          <div class="grid grid-cols-2 gap-3">
            <div class="aspect-[3/4] overflow-hidden rounded-xl">
              <img src="/images/city-hubs/savannah.webp" alt="Savannah's haunted Bonaventure Cemetery" class="w-full h-full object-cover" loading="lazy">
            </div>
            <div class="aspect-[3/4] overflow-hidden rounded-xl mt-6">
              <img src="/images/city-hubs/edinburgh.webp" alt="Edinburgh's haunted underground vaults" class="w-full h-full object-cover" loading="lazy">
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/2">
          <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white mb-4" style="font-family: 'Cinzel', serif;">
            The World's Most Haunted Cities
          </h2>
          <div class="text-base leading-relaxed space-y-4" style="color: #c8bdd8;">
            <p>
              Hauntings concentrate where history was violent. <a href="/savannah-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Savannah</a>'s entire historic district sits on top of colonial-era burial grounds with over 10,000 undisturbed graves. <a href="/charleston-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Charleston</a>'s Old City Jail held Civil War prisoners, pirates, and enslaved people for over a century. <a href="/london-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">London</a>'s hauntings span two millennia.
            </p>
            <p>
              <a href="/edinburgh-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Edinburgh</a>'s underground vaults trapped plague victims in sealed chambers beneath the Royal Mile. <a href="/paris-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Paris</a>'s catacombs hold the bones of six million. <a href="/chicago-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Chicago</a>'s Great Fire of 1871 killed 300, and <a href="/boston-ghost-tours/" class="text-purple-400 hover:text-purple-300 transition-colors">Boston</a>'s colonial graveyards hold massacre victims in mass graves.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Editorial Section 3: How We Curate -->
  <section class="py-12 md:py-16 border-t" style="border-color: #3d2a4d;">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="flex flex-col gap-8 md:flex-row md:items-center md:gap-12">
        <div class="w-full md:w-1/2">
          <div class="aspect-[4/3] overflow-hidden rounded-2xl">
            <img src="/images/city-hubs/london.webp" alt="Tower of London at dusk" class="w-full h-full object-cover" loading="lazy">
          </div>
        </div>
        <div class="w-full md:w-1/2">
          <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white mb-4" style="font-family: 'Cinzel', serif;">
            How We Curate Our Tours
          </h2>
          <div class="text-base leading-relaxed space-y-4" style="color: #c8bdd8;">
            <p>
              Every tour is selected for historical accuracy and traveler satisfaction. We partner with Viator to offer tours backed by thousands of verified reviews, and we prioritize guides who cite specific dates and documented events rather than generic ghost stories. A good ghost tour leaves you knowing more about a city's real history than most residents. A bad one is just a <a href="/articles/how-to-spot-bad-ghost-tour/" class="text-purple-400 hover:text-purple-300 transition-colors">costume walk with a flashlight</a>.
            </p>
            <p>
              Whether you're a <a href="/articles/ghost-tours-for-skeptics/" class="text-purple-400 hover:text-purple-300 transition-colors">skeptic</a>, a <a href="/articles/ghost-tours-for-couples/" class="text-purple-400 hover:text-purple-300 transition-colors">couple planning an evening out</a>, or a <a href="/articles/ghost-tours-with-kids/" class="text-purple-400 hover:text-purple-300 transition-colors">family with kids</a>, there's a tour format that fits.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Cities Grid -->
  <section class="py-12 border-t" style="border-color: #3d2a4d;" id="cities">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="mb-8">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">United States</h2>
        <p class="mt-2 text-base" style="color: #7a6b8a;">Ghost tours across America's most haunted cities</p>
      </div>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:gap-6">
        {usCities.map((city) => (
          <a href={`/${city.slug}/`} class="group relative block aspect-[4/3] overflow-hidden rounded-2xl">
            <img src={city.image} alt={`Ghost tours in ${city.name}`} class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy">
            <div class="pointer-events-none absolute inset-0 rounded-2xl" style="background: linear-gradient(to top, rgba(0,0,0,0.6), rgba(0,0,0,0.18), rgba(0,0,0,0.05));"></div>
            <div class="absolute bottom-0 left-0 right-0 p-3 sm:p-4">
              <h3 class="text-sm font-semibold text-white sm:text-base lg:text-lg" style="text-shadow: 0 2px 6px rgba(0,0,0,0.6);">{city.name}</h3>
              <p class="text-xs mt-0.5 hidden sm:block" style="color: #d1d5db; text-shadow: 0 1px 4px rgba(0,0,0,0.8);">{city.tagline}</p>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-12 mb-8">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">International</h2>
        <p class="mt-2 text-base" style="color: #7a6b8a;">Haunted cities across Europe</p>
      </div>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:gap-6">
        {intlCities.map((city) => (
          <a href={`/${city.slug}/`} class="group relative block aspect-[4/3] overflow-hidden rounded-2xl">
            <img src={city.image} alt={`Ghost tours in ${city.name}`} class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy">
            <div class="pointer-events-none absolute inset-0 rounded-2xl" style="background: linear-gradient(to top, rgba(0,0,0,0.6), rgba(0,0,0,0.18), rgba(0,0,0,0.05));"></div>
            <div class="absolute bottom-0 left-0 right-0 p-3 sm:p-4">
              <h3 class="text-sm font-semibold text-white sm:text-base lg:text-lg" style="text-shadow: 0 2px 6px rgba(0,0,0,0.6);">{city.name}</h3>
              <p class="text-xs mt-0.5 hidden sm:block" style="color: #d1d5db; text-shadow: 0 1px 4px rgba(0,0,0,0.8);">{city.tagline}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Destinations -->
  <section class="py-12">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="mb-10">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">Iconic Haunted Destinations</h2>
        <p class="mt-2 text-base" style="color: #7a6b8a;">Legendary landmarks with centuries of documented hauntings</p>
      </div>
      <div class="flex flex-col gap-4 lg:gap-6">
        <a href="/destinations/draculas-castle/" class="group block">
          <div class="relative overflow-hidden rounded-2xl min-h-[200px] md:h-48" style="box-shadow: inset 0 0 80px rgba(0,0,0,0.4);">
            <img src="/images/draculas-castle-banner.jpg" alt="Bran Castle in Transylvania" class="absolute inset-0 w-full h-full object-cover" loading="lazy">
            <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0.95), rgba(0,0,0,0.6), rgba(0,0,0,0.2));"></div>
